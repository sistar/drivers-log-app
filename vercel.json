{
    "builds": [
      { 
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { 
          "distDir": "dist",
          "cleanDistDir": true
        }
      },
      { 
        "src": "api/**/*.ts",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "api/$1.ts" },
      { "src": "/assets/(.*)", "dest": "/assets/$1" },
      { 
        "src": "/(.*)", 
        "dest": "/index.html",
        "headers": { "Cache-Control": "public, max-age=3600" }
      }
    ]
  }
